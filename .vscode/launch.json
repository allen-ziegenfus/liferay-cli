  "version": "0.2.0",
  "configurations": [
    {
      "name": "lcectl runtime create",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "main.go",
      "args": ["runtime", "create"]
    },
    {
      "name": "lcectl ext refresh -v",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "main.go",
      "args": ["ext", "refresh", "-v"],
      "cwd": "${input:workspacePath}"
    },
    {
      "name": "lcectl runtime stop -v",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "main.go",
      "args": ["runtime", "stop", "-v"]
    },
    {
      "name": "lcectl ext create",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "main.go",
      "args": ["ext", "create"]
    },
    {
      "name": "lcectl ext create -d foo",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "main.go",
      "args": ["ext", "create", "-d", "foo"]
    }
  ],
  "inputs": [
    {
      "id": "workspacePath",
      "description": "Enter the path to client extensions workspace",
      "type": "promptString"
    }
  ]
}